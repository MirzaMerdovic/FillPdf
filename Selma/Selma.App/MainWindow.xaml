<Window x:Class="Selma.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Selma.App"
        xmlns:controls="clr-namespace:Selma.App.Controls"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid Name="GridMain">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Name="Candidates" Width="*" />
            <ColumnDefinition Name="CandidateInfo" Width="2*" />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0">
            <Button Name="ButtonAddCandidate" Click="AddNewCandidate">Dodaj novog kandidata</Button>
            <TreeView Name="TreeViewCandidates" />
        </StackPanel>

        <Grid Name="GridCandidateInfoWrapper" Grid.Column="1">
            <!--<controls:CandidateControl x:Name="ControlCandidateData"></controls:CandidateControl>-->
        </Grid>
    </Grid>
</Window>
